<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<GridPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="gui.DepartmentFormController"
          prefWidth="300" hgap="10" vgap="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>

    <Label text="ID" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="txtId" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Label text="Name" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="txtName" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="2" alignment="CENTER_LEFT">
        <Button fx:id="btSave" onAction="#onBtSaveAction" text="Save" />
        <Button fx:id="btCancel" onAction="#onBtCancelAction" text="Cancel" />
    </HBox>

</GridPane>