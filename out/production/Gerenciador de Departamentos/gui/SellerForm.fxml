<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<GridPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="gui.SellerFormController"
          prefWidth="400" hgap="10" vgap="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>

    <Label text="ID" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="txtId" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Label text="Name" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="txtName" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <Label fx:id="labelErrorName" textFill="RED" GridPane.columnIndex="2" GridPane.rowIndex="1" />

    <Label text="Email" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField fx:id="txtEmail" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    <Label fx:id="labelErrorEmail" textFill="RED" GridPane.columnIndex="2" GridPane.rowIndex="2" />

    <Label text="Birth Date" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <DatePicker fx:id="dpBirthDate" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    <Label fx:id="labelErrorBirthDate" textFill="RED" GridPane.columnIndex="2" GridPane.rowIndex="3" />

    <Label text="Base Salary" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <TextField fx:id="txtBaseSalary" GridPane.columnIndex="1" GridPane.rowIndex="4" />
    <Label fx:id="labelErrorBaseSalary" textFill="RED" GridPane.columnIndex="2" GridPane.rowIndex="4" />

    <Label text="Department" GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <ComboBox fx:id="comboBoxDepartment" prefWidth="150" GridPane.columnIndex="1" GridPane.rowIndex="5" />
    <Label fx:id="labelErrorDepartment" textFill="RED" GridPane.columnIndex="2" GridPane.rowIndex="5" />

    <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="6" alignment="CENTER_LEFT">
        <Button fx:id="btSave" onAction="#onBtSaveAction" text="Save" />
        <Button fx:id="btCancel" onAction="#onBtCancelAction" text="Cancel" />
    </HBox>

</GridPane>